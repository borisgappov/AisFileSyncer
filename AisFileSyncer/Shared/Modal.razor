<div class="modal @_displayClass @modalClass" tabindex="-1" role="dialog" style="display:@_display" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="Close">Close</button>
            </div>
        </div>
    </div>
</div>

@if (_showBackdrop)
{
    <div class="modal-backdrop fade show" @onclick="Close"></div>
}


@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string modalClass { get; set; }

    [Parameter]
    public string title { get; set; }

    string _display = "none;";
    string _displayClass = "";
    bool _showBackdrop = false;

    public void Open()
    {
        _display = "block;";
        _displayClass = "Show";
        _showBackdrop = true;
        this.StateHasChanged();
    }

    public void Close()
    {
        _display = "none";
        _displayClass = "";
        _showBackdrop = false;
        this.StateHasChanged();
    }
}