@page "/"
@using System
@using AisFileSyncer.Infrastructure.Interfaces
@using AisFileSyncer.Infrastructure.Models
@inject IFileProvider _fileProvider

<h1>Files</h1>

@AppDomain.CurrentDomain.GetData("AisFileSyncerDataPath")

@if (files == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" @onclick="LoadFileListAsync">Reload</button>

    <table class="table">
        <thead>
            <tr>
                <th>File Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in files)
            {
                <tr>
                    <td>@file.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<FileModel> files;

    protected override async Task OnInitializedAsync()
    {
        await LoadFileListAsync();
    }

    async Task LoadFileListAsync()
    {
        files = await _fileProvider.GetUrlListAsync().ConfigureAwait(false);
    }
}
